" Remove menu bar
set guioptions-=m

" Remove tool bar
set guioptions-=T

" Remove scroll bars
set guioptions-=l
set guioptions-=r
set guioptions-=b
set guioptions-=L
set guioptions-=R

" use console dialogs instead of popup
" dialogs for simple choices
set guioptions+=c

set guifont=Inconsolata\ Medium\ 11

set bg=dark
