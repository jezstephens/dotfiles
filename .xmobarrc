Config { font = "xft:Inconsolata-11"
       , bgColor = "#222222"
       , fgColor = "grey"
       , position = Top
       , commands = [ Run Cpu ["-t", "<total>", "-L","5","-H","40","--normal","green","--high","red"] 10
                    , Run Memory ["-t", "<usedratio>%"] 10
                    , Run Network "wlan0" ["-t", "<tx>/<rx>", "-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Battery ["-t", "<left>"] 10
                    , Run Date "%a %b %_d %H:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ CPU: %cpu% | MEM: %memory% | NET: %wlan0% | BAT: %battery% | %date% "
       }
